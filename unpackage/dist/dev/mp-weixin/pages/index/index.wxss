.home_swiper swiper {
  width: 750rpx;
  height: 350rpx;
}
.home_swiper swiper image {
  width: 100%;
  height: 350rpx;
}
.home_search {
  height: 60rpx;
  padding: 20rpx 50rpx;
  background-color: #FF6100;
  position: relative;
}
.home_search .search-ico-wapper {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 70rpx;
  top: 30rpx;
}
.home_search .search-ico-wapper image {
  width: inherit;
  height: inherit;
}
.home_search .home_search_input {
  background-color: #ffffff;
  border-radius: 30rpx;
  height: 60rpx;
  padding: 0 30rpx 0 80rpx;
  font-size: 30rpx;
}
.home_recommend {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 20rpx;
}
.home_recommend .recommend_item {
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
  text-align: center;
}
.home_recommend .recommend_item view image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.hot_goods {
  background: #eee;
  overflow: hidden;
  margin-top: 10rpx;
}
.hot_goods .tit {
  color: #FF6100;
  height: 50px;
  line-height: 50px;
  text-align: center;
  letter-spacing: 20px;
  background: #fff;
  margin: 7rpx 0;
}

